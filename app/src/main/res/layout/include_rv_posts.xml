<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_250sp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_250sp"
            android:background="@color/clr_black"
            android:layout_margin="@dimen/size_5sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/size_20sp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/size_10sp">
            <ImageView
                android:layout_width="@dimen/size_18sp"
                android:layout_height="@dimen/size_20sp"
                android:src="@drawable/play_icon"
                android:tint="@color/clr_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5sp"
                android:text="563"
                android:textColor="@color/clr_white"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>